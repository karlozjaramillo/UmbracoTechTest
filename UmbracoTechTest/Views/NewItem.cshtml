@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Layout.cshtml";
    var newItem = Model.Content;
    var image = Model.Content.GetPropertyValue<string>("image");
    var title = newItem.GetPropertyValue("title");
    var summary = newItem.GetPropertyValue("summary");
    var author = newItem.GetPropertyValue("author");
    var category = newItem.GetPropertyValue("category");
    var mediaItem = Umbraco.TypedMedia(image);
    var url = mediaItem.Url;
}

<article class="brick entry format-standard" style="margin: 0 100px">
    <div class="entry-thumb">
        <a href="@newItem.Url" class="thumb-link"><img src="@url" /></a>
    </div>
    <div class="entry-text">
        <div class="entry-header">
            <h1 class="entry-title">
                <a href="@newItem.Url" style="color: black">@title</a>
            </h1>
            <h5>@category</h5>
        </div>
        <div class="entry-excerpt">
            @summary
        </div>
        <div>
            <p style="text-align-last: end;">Author: @author</p>
            <a href="/" style="color: black"><img src="~/images/leftArrow.png" alt="Back to Home" width="50px" /></a>
        </div>
    </div>
</article>
